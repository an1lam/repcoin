{
  "name": "reps",
  "description": "The first and best reputation market.",
  "author": "Stephen Malina and Matt Ritter",
  "dependencies": {
    "bcrypt": "^0.8.0",
    "body-parser": "^1.9.0",
    "bootstrap": "~3.3.0",
    "browserify": "~6.2.0",
    "busboy": "^0.2.9",
    "catw": "^0.2.0",
    "express": "~4.9.4",
    "express-session": "~1.8.2",
    "flux": "~2.0.1",
    "jquery": "~2.1.1",
    "jshint": "~2.5.8",
    "jsxhint": "~0.5.0",
    "mongoose": "~3.8.17",
    "passport": "~0.2.1",
    "passport-local": "~1.0.0",
    "pubsub-js": "^1.5.0",
    "react": "~0.12.0",
    "react-router": "~0.10.0",
    "react-tools": "~0.12.0",
    "reduce": "~1.0.1",
    "watchify": "^2.1.0",
    "jshint": "~2.5.8",
    "npm-watch": "0.0.0",
    "nodemon": "~1.2.1"
  },
  "devDependencies": {
    "connect-livereload": "^0.4.0",
    "gulp": "^3.8.8",
    "gulp-browserify": "~0.5.0",
    "gulp-connect": "~2.0.6",
    "gulp-express": "^0.1.0",
    "gulp-jshint": "~1.8.4",
    "gulp-mocha": "~1.1.1",
    "gulp-plumber": "~0.6.5",
    "gulp-react": "~2.0.0",
    "gulp-rename": "~1.2.0",
    "gulp-util": "~3.0.1",
    "jshint": "~2.5.6",
    "reactify": "~0.15.2",
    "should": "^4.0.4",
    "supertest": "^0.14.0",
    "agenda": "~0.6.22",
    "jsdom": "~0.11.1",
    "chai": "~1.9.2",
    "sinon": "~1.11.1"
  },
  "jshintConfig": {
    "node": "true",
    "browser": "true",
    "newcap": "false"
  },
  "scripts": {
    "lint": "jsxhint js/**/*.jsx && jshint api/**/*.js",
    "watch": "npm run watch-html & npm run watch-css & npm run build-jsx",
    "build-jsx": "watchify -t reactify --debug --extension=.jsx js/app.jsx -o build/app.js -dv",
    "build-css": "cp -a css/ build/css/",
    "build-html": "cp index.html build/index.html",
    "watch-css": "nodemon --ignore build/ -e css --watch css --exec 'cp -a css/ build/'",
    "watch-html": "nodemon --ignore build/ -e html --watch index.html --exec 'cp index.html build/index.html'",
    "build-lib": "cp js/lib/**/* build/js/lib/",
    "build-fonts": "cp fonts/** build/fonts/",
    "kill": "pkill -f npm & pkill -f node;",
    "start": "node server.js"
  }
}
